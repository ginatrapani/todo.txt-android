<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/loginbackground"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="@drawable/login_background">

<ImageView android:id="@+id/todos_img" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
    android:layout_gravity="center_horizontal|bottom"
	android:src="@drawable/todotxt_touch_256" android:contentDescription="@string/app_label"
	android:paddingBottom="5dp"/>
	
<LinearLayout
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

<LinearLayout
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:layout_gravity="center_horizontal|top"
	android:paddingBottom="15dp">
	
	<TextView android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/first_title_word"
		android:textSize="12pt"
		android:typeface="monospace"
		android:textColor="@color/white"
		android:paddingTop="15dp"
		android:shadowColor="@color/black"
		android:shadowRadius="1.0"
	/>
	<TextView android:id="@+id/title_2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/second_title_word"
		android:textSize="12pt"
		android:typeface="serif"
		android:textStyle="italic"
		android:shadowColor="@color/black"
		android:shadowRadius="1.0"
	/>
	</LinearLayout>
	
	<Button android:id="@+id/login"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:textSize="8pt"
		android:text="@string/login_screen_button" />
</LinearLayout>
</FrameLayout>