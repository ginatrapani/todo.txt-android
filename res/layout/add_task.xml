<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
	
			<Spinner style="@style/Spinner"
				android:id="@+id/priority_spinner"				
				android:prompt="@string/priority_prompt"
			/>
			<Spinner style="@style/Spinner"
				android:id="@+id/project_spinner"
				android:prompt="@string/project_prompt"
			/>
			<Spinner style="@style/Spinner"
				android:id="@+id/context_spinner"
				android:prompt="@string/context_prompt"
			/>
			
	</LinearLayout>
	<ImageView style="@style/HorizontalRule" android:contentDescription="@string/separator" />
	
	<EditText android:id="@+id/taskText" android:hint="@string/tasktexthint"
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:padding="5dip" android:inputType="textCapSentences" />
</LinearLayout>