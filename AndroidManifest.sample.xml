<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mpcjanssen.todotxtholo"
    android:versionCode="35"
    android:versionName="0.1.3" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:name="nl.mpcjanssen.todotxtholo.TodoApplication"
        android:allowBackup="false"
        android:icon="@drawable/todotxt_touch_icon"
        android:label="@string/app_label"
        android:uiOptions="splitActionBarWhenNarrow"
        android:theme="@android:style/Theme.Holo.Light.DarkActionBar">
        <activity
            android:name="com.dropbox.client2.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:exported="true"
            android:launchMode="singleTask" >
            <intent-filter>

                <!-- Change this to be db- followed by your app key -->
                <data android:scheme="db-PUT-APP-KEY-HERE" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.mpcjanssen.todotxtholo.LoginScreen"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_label" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="nl.mpcjanssen.todotxtholo.Preferences"
            android:label="@string/set_preferences" />
        <activity
            android:name="nl.mpcjanssen.todotxtholo.AddTask"
            android:configChanges="orientation|keyboardHidden"
            android:exported="true"
            android:permission="android.permission.INTERNET"
            android:label="@string/addtask"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name="nl.mpcjanssen.todotxtholo.AddTaskShortcut"
            android:label="@string/shortcut_addtask_name"
            android:targetActivity=".AddTask" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="nl.mpcjanssen.todotxtholo.AddTaskShare"
            android:label="@string/share_addtask_name"
            android:targetActivity=".AddTask" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="nl.mpcjanssen.todotxtholo.HelpActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name="nl.mpcjanssen.todotxtholo.TodoTxtTouch"
            android:configChanges="keyboardHidden|orientation"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name="nl.mpcjanssen.todotxtholo.FilterActivity"
            android:label="@string/title_activity_filter" >
        </activity>
    </application>

</manifest>
